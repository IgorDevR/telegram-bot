<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">


    <changeSet id="create new table" author="igor">
        <createTable tableName="course_telegram_bot">
            <column name="id" type="bigserial" autoIncrement="true" remarks="identification">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="chat_id" type="bigserial" remarks="number chat id telegram for send message">
                <constraints nullable="false"/>
            </column>
            <column name="text_message" type="text" remarks="text sending message"/>
            <column name="data_time_send_message" type="timestamp" remarks="date and time when the message should be sent"/>
        </createTable>
        <rollback>
            <dropTable tableName="CourseTelegramBot"/>
        </rollback>
    </changeSet>
</databaseChangeLog>